@model ShippingCalculator.Models.Offer

<h2>Create New Offer</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Carrier"></label>
        <input asp-for="Carrier" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="OfferType"></label>
        <input asp-for="OfferType" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Rate"></label>
        <input asp-for="Rate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Zone"></label>
        <input asp-for="Zone" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
